
<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<%= button_to "Create New Pokemon!", pokemons_new_path, :class => "button medium", :method => :get %>

<p>Pokemon: <% @pokemons.each do |poke| %></p>
<ul><li>Name: <%= poke.name %>, Level: <%= poke.level %>, Health: <%= poke.health %><%= button_to "Damage!", damage_path(id: poke), :class => "button medium", :method => :patch %></li>
</ul><% end %>